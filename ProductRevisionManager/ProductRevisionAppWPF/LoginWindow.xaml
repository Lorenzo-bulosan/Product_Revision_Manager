<Window x:Class="ProductRevisionAppWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProductRevisionAppWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="600">
    <Grid VerticalAlignment="Center">
        <StackPanel>
            <TextBox x:Name="TextName">username</TextBox>
            <TextBox x:Name="TextSurname">password</TextBox>
            <Button x:Name="ButtonLogin" Click="ButtonLogin_Click">Login</Button>
        </StackPanel>        
    </Grid>
</Window>
